{
    "name": "preferans/oauth-bridge",
    "license": "MIT",
    "type": "library",
    "homepage": "https://preferans.gitbooks.io/oauth-bridge/content",
    "description": "A library focused on API Authentication for Phalcon applications.",
    "keywords": [
        "auth",
        "oauth",
        "oauth 2",
        "oauth 2.0",
        "server",
        "auth",
        "authorization",
        "authorisation",
        "authentication",
        "api",
        "oauth",
        "oauth2",
        "micro",
        "phalcon",
        "preferans",
        "resource",
        "secure"
    ],
    "require": {
        "php": ">=7.0 <7.2",
        "ext-openssl": "*",
        "ext-phalcon": ">=3.2.0 <4.0",
        "lcobucci/jwt": "^3.2"
    },
    "require-dev": {
        "phpstan/phpstan": "@stable",
        "phpunit/phpunit": "@stable",
        "squizlabs/php_codesniffer": "3.0.x-dev"
    },
    "authors": [
        {
            "name": "Serghei Iakovlev",
            "email": "serghei@phalconphp.com",
            "role": "Developer"
        },
        {
            "name": "Alex Bilbie",
            "email": "hello@alexbilbie.com",
            "homepage": "http://www.alexbilbie.com",
            "role": "Developer"
        }
    ],
    "conflict": {
        "league/oauth2-server": "*"
    },
    "support": {
        "source": "https://github.com/preferans/oauth-bridge",
        "issues": "https://github.com/preferans/oauth-bridge/issues",
        "docs": "https://preferans.gitbooks.io/oauth-bridge/content"
    },
    "autoload": {
        "psr-4": {
            "Preferans\\Oauth\\": "src/"
        }
    },
    "scripts": {
        "phpstan": "vendor/bin/phpstan analyse -l 6 -c phpstan.neon src",
        "phpcs": "vendor/bin/phpcs",
        "phpunit": "vendor/bin/phpunit"
    }
}
